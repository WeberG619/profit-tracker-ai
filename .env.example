# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-a-secure-one
FLASK_ENV=production

# Database Configuration
# For PostgreSQL (Production):
DATABASE_URL=postgresql://username:password@localhost:5432/profit_tracker

# For SQLite (Development):
# DATABASE_URL=sqlite:///receipts.db

# Twilio Configuration (Optional - for SMS features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token  
TWILIO_PHONE_NUMBER=+1234567890

# Alert Configuration (Optional)
ALERT_PHONE_NUMBERS=+1234567890,+0987654321  # Comma-separated list

# Redis Configuration (Optional - for rate limiting)
REDIS_URL=redis://localhost:6379

# Application Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
LOG_LEVEL=INFO

# CORS Settings (Optional)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com