{
  "name": "Profit Tracker AI",
  "description": "AI-powered profit tracking for trade businesses. Text receipts, track costs, never lose money on jobs again.",
  "repository": "https://github.com/WeberG619/profit-tracker-ai",
  "logo": "https://raw.githubusercontent.com/WeberG619/profit-tracker-ai/main/docs/images/logo.png",
  "keywords": ["python", "flask", "ai", "receipts", "trades", "profit-tracking", "small-business"],
  "website": "https://profittrackerai.com",
  "success_url": "/setup",
  "env": {
    "OPENAI_API_KEY": {
      "description": "Your OpenAI API key for GPT-4 Vision (required)",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Secret key for Flask sessions (auto-generated)",
      "generator": "secret"
    },
    "FLASK_ENV": {
      "description": "Flask environment",
      "value": "production",
      "required": true
    },
    "TWILIO_ACCOUNT_SID": {
      "description": "Twilio Account SID for SMS features (optional)",
      "required": false
    },
    "TWILIO_AUTH_TOKEN": {
      "description": "Twilio Auth Token (optional)",
      "required": false
    },
    "TWILIO_PHONE_NUMBER": {
      "description": "Your Twilio phone number (optional)",
      "required": false,
      "value": ""
    },
    "ALERT_PHONE_NUMBERS": {
      "description": "Comma-separated phone numbers for profit alerts (optional)",
      "required": false,
      "value": ""
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "image": "heroku/python",
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    },
    {
      "plan": "papertrail:choklad"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "python app/migrations.py --create-tables"
  },
  "environments": {
    "test": {
      "scripts": {
        "test": "pytest tests/"
      }
    }
  }
}